<%=form_for(@item) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label :text %>
    <%= f.text_area :text%>
  </div>
  <div>
    <%= f.submit '保存',data:{confirm:'保存していいですか？',disable_with:'処理中...'} %>
  </div>
<% end%>