<%= form_for(@customer) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :name_kana %>
    <%= f.text_field :name_kana %>
  </div>
  <div>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
  </div>
  <div>
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.telephone_field	 :phone %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>
  <%= f.fields_for :items, @items[0] do |item| %>
    <div>
      <%= item.label :name %>
      <%= item.text_field :name %>
    </div>
    <div>
      <%= item.label :price %>
      <%= item.number_field :price %>
    </div>
    <div>
      <%= item.label :image %>
      <%= item.file_field :image %>
    </div>
    <div>
      <%= item.label :text %>
      <%= item.text_area :text%>
    </div>
  <% end %>
  <%= f.collection_check_boxes :item_ids, @ItemsAll, :id, :name do |item|%>
    <%= item.check_box %>
    <%= item.object.name%>
    <%= image_tag(item.object.image.url) %>
  <%end %>
  <%= f.submit '保存',data:{confirm:'保存していいですか？',disable_with:'処理中...'} %>
<% end %>